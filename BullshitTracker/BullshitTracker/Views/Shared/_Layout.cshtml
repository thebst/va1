<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tackaaroo!!</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BS-Trk-A-ROO", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Transactions", "Index", "Transactions")</li>
                    <li>@Html.ActionLink("Exceptions", "Index", "ExeptionTransaction")</li>
                    <li>@Html.ActionLink("Merchants", "Index", "Merchants")</li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Budget vs Actual<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Summary (placeholder)</a></li>
                            <li class="divider"></li>
                            <li>
                            <li>@Html.ActionLink("Previous Month", "Index", "BudgetVsActual",null , null)</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("April", "Index", "BudgetVsActual", new { periodId = 4 }, null)</li>
                            <li>@Html.ActionLink("May", "Index", "BudgetVsActual", new { periodId = 5 }, null)</li>
                            <li>@Html.ActionLink("June", "Index", "BudgetVsActual", new { periodId = 6 }, null)</li>
                            <li>@Html.ActionLink("July", "Index", "BudgetVsActual", new { periodId = 7 }, null)</li>
                            <li>@Html.ActionLink("August", "Index", "BudgetVsActual", new { periodId = 8 }, null)</li>
                            <li>@Html.ActionLink("September", "Index", "BudgetVsActual", new { periodId = 9 }, null)</li>
                        </ul>
                        
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - By Mark</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>

        $(function () { // will trigger when the document is ready
            $('.datepicker').datepicker(); //Initialise any date pickers
        });


    </script>*@



    @RenderSection("scripts", required: false)
</body>
</html>
