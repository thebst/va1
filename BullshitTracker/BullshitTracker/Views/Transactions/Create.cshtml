@model BullshitTracker.Models.Transaction

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Transaction</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TransactionDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               
                @Html.TextBoxFor(model => model.TransactionDate, new { @class = "form-control datepicker", placeholder = "Transaction Date..." })
                @Html.ValidationMessageFor(model => model.TransactionDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vendor, "Vendor", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Vendor", String.Empty)
                @Html.ValidationMessageFor(model => model.Vendor)
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Complete only if adding a new vendor</h3>
            </div>
            <div class="panel-body">
                @* NEW VENDOR *@
                <div class="form-group">
                    <label class="control-label col-md-2">New Vendor Name:</label>

                    <div class="col-md-10">
                        <input id="newVendorName" name="newVendorName" type="text" />
                    </div>

                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">New Vendor Category:</label>

                    <div class="col-md-10">
                        @Html.DropDownList("newVendorCategory", String.Empty)
                    </div>
                </div>
            </div>

            @* NEW VENDOR *@

        </div>






        <div class="form-group">
            @Html.LabelFor(model => model.Total, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Total, new { @type = "Number" })
                @Html.ValidationMessageFor(model => model.Total)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Account, "Account", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Account", String.Empty)
                @Html.ValidationMessageFor(model => model.Account)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



